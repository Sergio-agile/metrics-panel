<div class="container pt-5">
  <div class="row" >
    <div class="col">
      <h1 class="page-header ms-3">Metrics</h1>
    </div>
    <div class="col text-end me-3">
      <%= link_to 'Add Metric', new_metric_path, class: 'btn btn-outline-danger px-4 rounded-pill', data: { turbo_stream: true } %>
    </div>
    <div id="add-metric">
    </div>
    <div class="container d-flex justify-content-center">
      <div id="metrics-list-container" class="container pt-5 col-8">
        <% if @metrics.present? %>
          <% @metrics.each do |metric| %>
            <%= render 'card', metric: metric %>
          <% end %>
        <% else %>
          <h6 class="text-center">No metrics yet. Go ahead and add the first metric. Also you can seed the database with a sample metric, executing rails db:migrate</h6>
        <% end %>

      </div>
      <% if @metrics.present? %>
        <div id="metrics-nav mt-5">
          <%= render 'side_nav', metrics: @metrics %>
        </div>
      <% end %>
    </div>
  </div>
</div>
